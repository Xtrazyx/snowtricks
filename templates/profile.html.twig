{% extends "base.html.twig" %}

{% block title %}
  {{ parent() }} - Profil
{% endblock %}

{% block content %}
  <section class="section-figure">
    <div class="content-full">
      <div class="login-form">
        <h1>Informations du profil</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-default">Envoyer</button>
        {{ form_end(form) }}

        <div class="lost-pass">
          Mot de passe perdu ? <a href="{{ path('retrieve') }}">Récupérer mon mot de passe</a>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
