{% extends "base.html.twig" %}

{% block content %}

  {# Message Flash #}
  {% for messages in app.session.flashbag.all %}
    <div class="alert alert-success">
      {% for message in messages %}
        <p>{{ message }}</p>
      {% endfor %}
    </div>
  {% endfor %}

  {# LISTE DES FIGURES #}
  <ul>
    {% for trick in tricks %}

      {# NOM #}
      <li>{{ trick.name }}</li>
      <li>{{ trick.group.name }}</li>
      <li><a href="{{ path('trick', {'id': trick.id}) }}">Voir le d√©tail</a></li>
      <li><a href="{{ path('edit_trick', {'id': trick.id}) }}">Editer</a> </li>

      {# IMAGES #}
      <ul>
        {% for image in trick.trickImages %}
          <li>{{ image.fileName }}</li>
          <li><img src="{{ asset(image.url) }}"></li>
        {% endfor %}
      </ul>

      {# VIDEOS #}
      <ul>
        {% for video in trick.videos %}
          <li>{{ video.sourceId }}</li>
        {% endfor %}
      </ul>

      <li><a href="{{ path('delete_trick', {'id': trick.id}) }}">Supprimer</a></li>

    {% endfor %}
  </ul>

{% endblock %}