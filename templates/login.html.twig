{% extends "base.html.twig" %}

{% block title %}
  {{ parent() }} - Connexion
{% endblock %}

{% block content %}
  <section class="section-figure">
    <div class="content-full">
      <div class="login-form">
        {% if error %}
          <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1>Connexion</h1>
        <p class="instruction">Merci de remplir tous les champs ci-dessous</p>

        <form action="{{ path('login') }}" method="post">
          <div class="form-group">
            <label for="username" class="control-label required">Email</label>
            <input type="text" id="username" name="_username" required="required" value="{{ lastUsername }}" class="form-control" />
          </div>

          <div class="form-group">
            <label for="password" class="control-label required">Mot de passe</label>
            <input type="password" id="password" name="_password" required="required" class="form-control" />
          </div>

          <input type="hidden" name="_csrf_token"
                 value="{{ csrf_token('authenticate') }}"
          >

          <button type="submit" class="btn btn-default">Envoyer</button>
        </form>

        <div class="lost-pass">
          Mot de passe perdu ? <a href="{{ path('retrieve') }}">Récupérer mon mot de passe</a>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
